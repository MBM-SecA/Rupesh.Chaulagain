@model Person
@{
    ViewData["Titlephrase"]="Add Employee";
    string[] genders ={"Male","Female","Other"};
    List<Department> depOptions = ViewData["DepartmentOptions"] as List<Department>;
}
<h3>Add New Employee</h3>
<hr>
<form   asp-controller="Employee" asp-action="Add" method="POST">
  
  <div class="form-group">
    <select class="custom-select" asp-for="DepartmentId">
      <option selected>Please select the department.</option>
      @foreach(var dep in depOptions)
      {
        <option value="@dep.Id">@dep.Name</option>
      }
    </select>
  </div>
  <div class="form-group">
    <label asp-for="FirstName"></label>
    <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name">
  </div>
  <div class="form-group">
    <label asp-for="SurName"></label>
    <input type="text" class="form-control" asp-for="SurName"  placeholder="Enter Last Name">
  </div>
  <div class="form-group">
    <label asp-for="Address"></label>
    <textarea class="form-control" asp-for="Address"  placeholder="Enter Address"></textarea>
  </div>
  <div class="form-group">
    <label asp-for="Gender"></label>
    @foreach (var gender in genders)
    {
      <input type="radio" asp-for="Gender" value="@gender[0]" /> @gender
    }
  </div>
    
  <div class="form-group">
    <label asp-for="Salary"></label>
    <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
  </div>

  
  <button type="submit" class="btn btn-primary">Save Employee</button>
</form>