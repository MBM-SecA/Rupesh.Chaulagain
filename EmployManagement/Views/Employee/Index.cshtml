@model List<Person>
@{
    ViewData["Titlephrase"] = "List";
}

<h1>All Employees (@Model.Count)</h1>
<table class="table background-dark">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">FirstName</th>
      <th scope="col">LastName</th>
      <th scope="col">Address</th>
      <th scope="col">Gender</th>
      <th scope="col">Salary</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @{int i=0;}
     @foreach (var employee in Model)
     {
       <tr scope ="row">
         <td>@(++i)</td>
         
        <td><a href="/employee/detail?Id=@employee.Id">@employee.FirstName</a></td>
         
         <td>@employee.SurName</td>
         <td>@employee.Address</td>
         <td>@employee.Gender</td>
         <td>@employee.Salary</td>
         <td><a class="btn btn-outline-primary" href="Employee/Edit?id=@employee.Id">Edit</a> </td>
         <td><a class="btn btn-outline-primary" href="Employee/Delete?id=@employee.Id">Delete</a> </td>
       </tr>
         
     }
  </tbody>
</table>
